{
    "name": "node-server",
    "private": true,
    "version": "1.0.0",
    "description": "",
    "keywords": [],
    "author": "",
    "license": "unlicensed",
    "engines": {
        "node": ">=12.0.0"
    },
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": ["lib/**/*"],
    "scripts": {
        "dev": "yarn build && concurrently -i -k -n 'app,tsc' -c 'green,cyan' 'nodemon' 'yarn build --watch --preserveWatchOutput'",
        "lint": "eslint ./src --ext .ts --env node",
        "test": "jest --passWithNoTests --rootDir ./",
        "clean": "rimraf ./lib ./tsconfig.tsBuildInfo",
        "build": "tsc --build ./tsconfig.build.json",
        "verify": "yarn test && yarn clean && yarn build && yarn lint",
        "purge": "yarn clean && rimraf ./coverage ./node_modules",
        "tsp": "yarn run tsp:root \"$@\" --cwd $(pwd)"
    },
    "nodemonConfig": {
        "exec": "node ./lib/index.js",
        "delay": "500",
        "ext": "js,json",
        "watch": [".env", "./lib"]
    },
    "dependencies": {
        "express": "4.17.1"
    },
    "devDependencies": {
        "@types/express": "4.17.6",
        "concurrently": "^5.2.0",
        "eslint": "^6.8.0",
        "jest": "26.3.0",
        "nodemon": "^2.0.4",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.2.0",
        "typescript": "~4.0.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": ["<rootDir>/src/**/*.test.ts"]
    }
}
